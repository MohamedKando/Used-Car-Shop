@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mx-1">
            <a id="manage" class="nav-link btn bg-white text-dark fw-medium border border-secondary px-3 d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle me-1"></i> @UserManager.GetUserName(User)
            </a>
        </li>
        <li class="nav-item mx-1">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Cars", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn bg-white text-dark fw-medium border border-secondary px-3 d-flex align-items-center">
                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item mx-1">
            <a class="nav-link btn bg-white text-dark fw-medium border border-secondary px-3 d-flex align-items-center" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i> Register
            </a>
        </li>
        <li class="nav-item mx-1">
            <a class="nav-link btn bg-white text-dark fw-medium border border-secondary px-3 d-flex align-items-center" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i> Login
            </a>
        </li>
    }
</ul>